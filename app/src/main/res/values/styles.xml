<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ImpulseWalletFragmentDetailsTextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImpulseWalletFragmentDetailsHeaderTextAppearance" parent="ImpulseWalletFragmentDetailsTextAppearance">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ImpulseWalletFragmentButtonTextAppearance">
        <item name="android:textColor">#0000ff</item>
    </style>

    <style name="ImpulseWalletFragmentStyle">
        <item name="buyButtonHeight">64dp</item>
        <item name="buyButtonWidth">match_parent</item>
        <item name="buyButtonText">book_now</item>
        <item name="buyButtonAppearance">grayscale</item>

        <item name="maskedWalletDetailsTextAppearance">@style/ImpulseWalletFragmentDetailsTextAppearance</item>
        <item name="maskedWalletDetailsHeaderTextAppearance">@style/ImpulseWalletFragmentDetailsHeaderTextAppearance</item>
        <item name="maskedWalletDetailsBackground">#ffffff</item>
        <item name="maskedWalletDetailsButtonBackground">@android:drawable/btn_default</item>
        <item name="maskedWalletDetailsButtonTextAppearance">@style/ImpulseWalletFragmentButtonTextAppearance</item>
        <item name="maskedWalletDetailsLogoImageType">classic</item>
    </style>

